<ui:ApplicationBarWindow x:Class="WpfApplicationBar.Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                xmlns:ui="clr-namespace:WpfApplicationBar;assembly=WpfApplicationBar"     
        Title="MainWindow" Height="30" Width="525" WindowStyle="None" ResizeMode="NoResize" AllowsTransparency="True">
    <Window.Background>
        <SolidColorBrush Color="White" Opacity="0.5" />
    </Window.Background>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Button Margin="3" Click="ChangeEdgeButton_Click">Change Edge</Button>
        <Button Margin="3" Grid.Column="1" Click="CloseButton_Click">Close</Button>
    </Grid>
</ui:ApplicationBarWindow>
